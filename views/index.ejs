  <body>
    <header><%- include("_navbar") -%></header>
    <section id="card-container">
      <div class="card">
        <form method="post">
          <label for="city" class="col-sm-2 col-form-label">Enter a city</label>
          <input id="city" type="text" class="form-control" name="city" />
          <input
            id="submit"
            type="submit"
            class="btn btn-primary"
            value="Send"
          />
        </form>
        <% if (locals.info) { %>
          <p>The temperature of <%= info.city %> is <%= info.temp %>Â°C</p>
        <% } %>
      </div>
    </section>
    <%- include("_footer") -%>
